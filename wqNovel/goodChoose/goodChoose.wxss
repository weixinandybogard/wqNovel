.goodChoose {
  position: relative;
  height: 100%;
  width: 100%;
}

.login {
  position: absolute;
  top: 100rpx;
  width: 50%;
  z-index: 2;
  left: 25%;
  height: 25%;
  background-color: wheat;
}

.login-button {
  width: 300rpx;
  height: 100rpx;
}

.title {
  display: flex;
  flex-direction: row;
  background-color: #f80;
  align-items: center;
}

.title-image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.title-text {
  flex-grow: 1;
  margin-left: 30rpx;
}

.title-group {
  margin-right: 50rpx;
}

.title-group-radio {
  margin-right: 10rpx;
}

.lunbo, .tuijian {
  background-color: rgba(238, 234, 226, 0.712);
  height: 330rpx;
}

.lunbo-view {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.lunbo-view-text {
  margin-left: 10rpx;
  margin-top: 10rpx;
  overflow: hidden;
}

.lunbo-image {
  height: 250rpx;
  width: 250rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.lunbo-swiper-item {
  display: flex;
  flex-direction: row;
}

.tuijian {
  margin-top: 20rpx;
}

.tuijian-view {
  display: flex;
  flex-direction: row;
}

.tuijian-view-scroll {
  white-space: nowrap;
  width: 93%;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}

.tuijian-text {
  width: 100%;
  margin-left: 30rpx;
  margin-top: 10rpx;
  color: red;
}
