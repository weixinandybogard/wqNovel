<!--pages/rechargeKind/rechargeKind.wxml-->
<view  style='background-color: white;'>
  <view class='title'>
    <text>请选择充值金额:</text>
  </view>

  <view class='detail'>
    <block wx:for="{{dataList}}">
      <view class='detail-item'>
        <view bindtap='onPay' data-bi='{{item.bi1}}' data-money='{{item.money1}}' class='detail-item-item'>
          <text>{{item.money1}}元</text>
          <text>{{item.bi1}}书币</text>
        </view>

        <view wx:if='{{item.money2!=undefined}}' data-bi='{{item.bi2}}' data-money='{{item.money2}}' bindtap='onPay' class='detail-item-item'>

          <text>{{item.money2}}元</text>
          <text>{{item.bi2}}书币</text>

        </view>
        <view wx:elif='{{item.money2==undefined}}' data-bi='{{item.bi2}}' data-money='{{item.money2}}' bindtap='onPay' style=' border-width: 0rpx;background-color:#fff;' class='detail-item-item'>

          <text>{{item.money2}}</text>
          <text>{{item.bi2}}</text>

        </view>


      </view>
    </block>
  </view>

  <view class='footerMemo'>
    <text>{{memo}}</text>
  </view>
</view>