/* pages/rechargeKind/rechargeKind.wxss */

.rechargeKind {
  position: absolute;
  width: 100%;
  height: 100%;
}

.title {
  background-color: rgba(238, 234, 226, 0.712);
  padding-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.detail {
  background-color: white;
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  justify-content: space-around;
}

.detail-item-item {
  display: flex;
  flex-direction: column;
  background-color: blanchedalmond;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
  border: 2rpx solid;
  border-width: 1rpx;
  border-style: outset;
  width: 200rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.footerMemo {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 700rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
  background-color: rgba(238, 234, 226, 0.712);
}
