/* pages/bookManage/bookManage.wxss */

.bookManage {
  position: absolute;
  height: 100%;
  width: 100%;
}

.detail {
  width: 100%;
  position: relative;
  height: 91.5%;
}

.detail-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-left: 30rpx;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.detail-item-image {
  width: 300rpx;
  height: 300rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.control {
  width: 100%;
  height: 90rpx;
  background-color: #f80;
  display: flex;
  flex-direction: row;
}

.control-button {
  flex-direction: 1;
  width: 100%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
